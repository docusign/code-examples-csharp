@{
    int formNumber = 0;
    int workspaceNameInputNumber = 0;
}

<h4>@Html.Raw(ViewBag.CodeExampleText.ExampleName)</h4>
<p>
    @Html.Raw(ViewBag.CodeExampleText.ExampleDescription)
</p>

@if (ViewBag.showDoc == true)
{
    <p><a target='_blank' href='<%= documentation %>'>Documentation</a> about this example</p>
}

<partial name="../../../Views/Shared/LinkToMethodView" model="ViewBag.CodeExampleText" />

<p>
    @Html.Raw(@String.Format(ViewBag.SupportingTexts.ViewSourceFile, "<a target='_blank' href=" + @ViewBag.source + ">CreateWorkspace.cs</a>"))
</p>

<form class="eg" action="" method="post" data-busy="form">
    <div class="form-group">
        <label for="workspaceName">
            @Html.Raw(ViewBag.CodeExampleText.Forms[formNumber].Inputs[workspaceNameInputNumber].InputName)
        </label>
        <input type="text"
               class="form-control"
               id="workspaceName"
               name="workspaceName"
               aria-describedby="emailHelp"
               placeholder="@ViewBag.CodeExampleText.Forms[formNumber].Inputs[workspaceNameInputNumber].InputPlaceholder"
               required/>
    </div>

    <input type="hidden" name="_csrf" value="<%- csrfToken %>">
    <button type="submit" class="btn btn-primary">@Html.Raw(ViewBag.SupportingTexts.SubmitButton)</button>
</form>
